@model OpenGateLogistics.Models.proveedor

<div>
    <h4>proveedor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.RazonSocial)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RazonSocial)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RFC)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RFC)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.categoriaproveedor.descripcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.categoriaproveedor.descripcion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.estadoproveedor.descripcion)
        </dt>

        <dd>
            @if (Model.estadoproveedor.descripcion == "Disponible")
            {
                <div style="color:green">
                    @Html.DisplayFor(model => model.estadoproveedor.descripcion)
                </div>
            }
            else
            {
                @Html.DisplayFor(model => model.estadoproveedor.descripcion)
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.nacionalidadproveedor.descripcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nacionalidadproveedor.descripcion)
        </dd>

    </dl>
</div>

<script src="https://canvasjs.com/assets/script/jquery-1.11.1.min.js"></script>


<script>
window.onload = function () {

var chart = new CanvasJS.Chart("chartContainer", {
	theme: "light1", // "light1", "light2", "dark1", "dark2"	
	title: {
		text: "Proveedores por Categoria"
	},
	subtitles: [{
		text: "2018"
	}],
	data: [{
		type: "pie",
		startAngle: 180,
		toolTipContent: "<b>{label}</b>: {y}",
		showInLegend: "true",
		legendText: "{label}",
		indexLabel: "{label} - {y}",
		dataPoints: @Html.Raw(ViewBag.DataPoints)
	}]
});
chart.render();

}
</script>

<div id="chartContainer" style="height: 370px; width: 100%;"></div>
<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>