@model OpenGateLogistics.Models.proveedor

@{
    ViewBag.Title = "Details";
    Layout = null;
}

<script src="~/Scripts/Proveedores.js"></script>

<div class="modal-header">
    <h3 class="modal-title">Detalle Proveedor</h3>
    <button onclick="pdf(@Model.id)" type="button" class="btn btn-default" data-dismiss="modal"><span class="fa fa-file-pdf-o"></span> PDF</button>
</div>
<div class="modal-body">
    <div class="row">
        <dl class="dl-horizontal">
            <dt>
                Razon Social
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RazonSocial)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.RFC)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RFC)
            </dd>

            <dt>
                Categoria
            </dt>

            <dd>
                @Html.DisplayFor(model => model.categoriaproveedor.descripcion)
            </dd>

            <dt>
                Estado
            </dt>

            <dd>
                @Html.DisplayFor(model => model.estadoproveedor.descripcion)
            </dd>

            <dt>
                Nacionalidad
            </dt>

            <dd>
                @Html.DisplayFor(model => model.nacionalidadproveedor.descripcion)
            </dd>

        </dl>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-danger" data-dismiss="modal"><span class="glyphicon glyphicon-remove-sign"></span> Cerrar</button>

</div>

